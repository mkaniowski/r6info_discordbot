{
  "compilerOptions": {
    "lib": [
      "es2021",
      "dom",
      "dom.iterable"
    ],
    "module": "commonjs",
    "target": "es2021",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "noResolve": false,
    "removeComments": true,
    "sourceMap": true
  },
  "include": [
    "./node_modules/**/*",
    "src/**/*"
  ]
}